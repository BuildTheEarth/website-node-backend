        "responses": {
          "200": {
            "description": "OK",
            "content": {
              "application/json": {}
            }
          },
          "404": {
            "description": "Buildteam not found",
            "content": {
              "application/json": {
                "example": {
                  "code": 404,
                  "message": "Buildteam does not exit.",
                  "translationKey": "404"
                }
              }
            }
          }
        },
        "parameters": [
          {
            "description": "The uuid of the buildteam",
            "in": "path",
            "name": "id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "tags": [
